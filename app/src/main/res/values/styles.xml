<resources>

    <style name="StreetArtViewDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/background_dark</item>
        <item name="colorPrimaryDark">@color/background_super_dark</item>
        <item name="colorAccent">@color/dribbble_dark</item>

        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <style name="StreetArtViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dribbble_super_dark</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorAccent">@color/tab_icon_selected</item>

        <item name="android:navigationBarColor">@color/dribbble_super_dark</item>
        <item name="android:statusBarColor">@color/dribbble_super_dark</item>
    </style>

    <style name="Theme.Swipe.Back" parent="StreetArtViewTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FillEditText">
        <item name="android:layout_marginLeft">@dimen/edittext_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/edittext_horizontal_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FillLine">
        <item name="android:layout_marginLeft">@dimen/line_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/line_horizontal_margin</item>
        <item name="android:background">@color/grey</item>
    </style>

</resources>
